<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.40"
            fx:controller="xyz.alexandersson.worklog.views.about.AboutController"
            prefHeight="200" prefWidth="400">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <top>
            <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </padding>
                <Label fx:id="appTitle" text="App title">
                    <font>
                        <Font name="System Bold" size="38"/>
                    </font>
                </Label>
                <Label text="Copyright &#169; 2017 Dennis Alexandersson"/>
            </VBox>
        </top>
        <bottom>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <HBox alignment="CENTER">
                    <Label text="Version: "/>
                    <Label fx:id="appVersion" text="0.5"/>
                </HBox>
                <HBox alignment="CENTER">
                    <Label text="Build: "/>
                    <Label fx:id="appBuild" text="12"/>
                    <Label text=" @ "/>
                    <Label fx:id="appBuildDate"/>
                </HBox>
                <Hyperlink text="MIT License" fx:id="mitLink"/>
            </VBox>
        </bottom>
    </BorderPane>
</AnchorPane>
