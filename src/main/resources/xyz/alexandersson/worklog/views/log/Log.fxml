<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.40"
            fx:controller="xyz.alexandersson.worklog.views.log.LogController"
            prefHeight="350.0" prefWidth="550.0">
    <GridPane hgap="10.0" layoutX="10.0" layoutY="10.0" vgap="10.0" AnchorPane.bottomAnchor="10.0"
              AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="170.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" percentHeight="60.0"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox alignment="TOP_CENTER" fillWidth="false" spacing="10.0" GridPane.rowSpan="2">
            <Label text="WorkLog">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <DatePicker fx:id="datePicker" editable="false" prefWidth="150.0"/>
            <HBox prefWidth="150.0" spacing="5.0">
                <ComboBox fx:id="projectComboBox" prefWidth="150.0" promptText="Select project"/>
                <Button fx:id="addProject" minWidth="25.0" text="+"/>
            </HBox>
            <TextField fx:id="startTextField" prefWidth="150" promptText="Start time"/>
            <TextField fx:id="stopTextField" prefWidth="150" promptText="Stop time"/>
            <TextArea fx:id="commentArea" prefWidth="150" promptText="Comments (optional)"/>
            <Button fx:id="logBtn" defaultButton="true" prefWidth="50.0" text="Log"/>
        </VBox>
        <TableView fx:id="logHistoryTable" GridPane.columnIndex="1">
            <columns>
                <TableColumn fx:id="historyDateColumn" sortType="DESCENDING" prefWidth="75.0" text="Date"/>
                <TableColumn fx:id="historyProjectColumn" prefWidth="75.0" text="Project"/>
                <TableColumn fx:id="historyStartColumn" sortType="DESCENDING" prefWidth="75.0" text="Start"/>
                <TableColumn fx:id="historyStopColumn" sortType="DESCENDING" prefWidth="75.0" text="Stop"/>
            </columns>
        </TableView>
        <TableView fx:id="logTotalTable" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <columns>
                <TableColumn fx:id="totalDateColumn" sortType="DESCENDING" prefWidth="75.0" text="Date"/>
                <TableColumn fx:id="totalProjectColumn" prefWidth="75.0" text="Project"/>
                <TableColumn fx:id="totalWorkColumn" prefWidth="75.0" text="Total work"/>
            </columns>
        </TableView>
    </GridPane>
</AnchorPane>
